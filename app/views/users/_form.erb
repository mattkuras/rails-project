<%= form_for(User.new) do |f| %>

    <%= f.label :first_name, 'First Name'%>
    <%= f.text_field :first_name%>
    <br>
    <%= f.label :last_name, 'Last Name'%>
    <%= f.text_field :last_name%>
    <br>
    <%= f.label :email, 'Email'%>
    <%= f.text_field :email%>
    <br>
    <%= f.label :password, 'Password'%>
    <%= f.text_field :password%>
    <br>
    <br>
    <%= fields_for :identities do |i|%>
    <%= i.collection_select :name, Community.all, :name, :name,  {:multiple => true}%>
    <br>
    <%= i.label :standard, "How many days a week would you need to practice to feel like?"%>
    <%= i.select :standard, options_for_select([["Select One", ""], "1 Day a Week", "2 Days a Week", "3 Days a Week", "4 Days a Week", "5 Days a Week", "6 Days a Week", "7 Days a Week"]) %>
    
    <%= f.submit %>
    <% end %>
<% end %>
